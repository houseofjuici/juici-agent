{
  "version": 2,
  "buildCommand": "npm install --no-package-lock && npm install --save-dev autoprefixer postcss tailwindcss @tailwindcss/typography && npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "env": {
    "VERCEL": "1",
    "NODE_ENV": "production",
    "DEBUG": "true"
  }
} 